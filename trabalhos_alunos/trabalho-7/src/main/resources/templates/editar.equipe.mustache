<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html lang="pt-br">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" lang="pt-br">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Academia</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
</head>
<body class="background">

    <div class="container-fluid">
        <div class="row">
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                    <div class="navbar-inner">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="/"><strong>Copa do Mundo</strong> Rússia 2018</a>
                        </div>
                        <ul class="nav navbar-nav nav-pills">
                            <li>
                                <a href="/grupo/">Grupos</a>
                            </li>
                            <li>
                                <a href="/equipe/">Equipes</a>
                            </li>
                            <li>
                                <a href="/jogador/">Jogadores</a>
                            </li>
                        </ul>
                        {{#logado}}
                        <ul class="nav navbar-nav nav-pills pull-right">
                            <li>
                                <a href="#">{{usuario.login}}</a>
                            </li>
                            <li>
                                <a href="/deslogar">Deslogar</a>
                            </li>
                        </ul>
                        {{/logado}}
                    </div>
                </div>
            </nav>
        </div>
        <div class="row" style="margin-top: 60px">
            <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Copa do Mundo Rússia 2018
                        </h3>
                    </div>
                    <div class="panel-body">
                        {{#erro}}
                        <div class="panel panel-danger">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-target="#erros">Ocorreram erros</a>
                                </h4>
                            </div>
                            <div id="erros" class="panel-collapse collapse in">
                                <ul class="list-group">
                                    {{#erros}}
                                    <li class="list-group-item list-group-item-danger">
                                        <strong>{{erro.msg}}</strong>
                                    </li>
                                    {{/erros}}
                                </ul>
                                <div class="panel-footer panel-danger"></div>
                            </div>
                        </div>
                        {{/erro}}



                        <form method="POST" action="/equipe/salvar">
                            <input type="hidden" name="id" value="{{equipe.id}}" />
                            <label for="nome">Nome</label>
                            <input type="text" name="nome" value="{{equipe.nome}}" class="form-control" autofocus required placeholder="Nome" />
                            <input type="submit" value="Salvar" class="btn btn-success pull-right" />
                        </form>

                        {{#editando}}
                            {{#temGrupo}}
                                <h3><strong>Grupo: </strong>
                                    <a href="/grupo/editar/{{equipe.grupo.id}}">{{equipe.grupo.nome}}</a>
                                </h3>
                            {{/temGrupo}}
                            <h3>Jogadores ({{equipe.jogadores.size}}/23)</h3>
                            {{#vago}}
                                <form method="POST" class="form form-inline" action="/equipe/adicionar/{{equipe.id}}">
                                    <select class="form-control" name="jogador" required>
                                        <option value="">Selecione um jogador</option>
                                        {{#jogadores}}
                                            <option value="{{id}}">{{nome}}</option>
                                        {{/jogadores}}
                                    </select>
                                    <input type="submit" value="Adicionar" class="btn btn-success" />
                                </form>
                            {{/vago}}
                            <table class="table table-hover">
                                {{#equipe.jogadores}}
                                    <tr>
                                        <td><h4>{{nome}}</h4></td>
                                        <td width="100"><form method="POST" action="/equipe/remover/{{equipe.id}}">
                                            <input type="hidden" name="jogador" value="{{id}}" />
                                            <input type="submit" value="Remover" class="btn btn-danger btn-sm" />
                                        </form></td>
                                        <td width="100"><a href="/jogador/editar/{{id}}" class="btn btn-warning btn-sm">
                                            Editar
                                        </a></td>
                                    </tr>
                                {{/equipe.jogadores}}
                            </table>
                        {{/editando}}


                    </div>
                    <div class="panel-footer">
                        <p>Admin de Academia, <strong>2018</strong>.</p>
                    </div>

                    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
                    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
                </body>
                </html>

